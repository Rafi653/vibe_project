# Application Settings
APP_NAME=Vibe Fitness Platform
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
# For local development (without Docker):
# DATABASE_URL=postgresql+asyncpg://vibe_user:vibe_password@localhost:5432/vibe_db
# For Docker development:
DATABASE_URL=postgresql+asyncpg://vibe_user:vibe_password@postgres:5432/vibe_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS='["http://localhost:3000","http://localhost:3001","http://localhost:5173"]'

# ngrok Configuration (optional - for public app sharing)
# Set these when using ngrok to expose your app publicly
# Get your ngrok URLs after running: ./scripts/start-ngrok.sh
NGROK_FRONTEND_URL=
NGROK_BACKEND_URL=

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
